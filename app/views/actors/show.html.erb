<p id="notice"><%= notice %></p>

<h1><%= @actor.name %></h1>
<div class="row">
  <div class="col-md-4">
    <%= image_tag attachment_url(@actor, :image, :fill, 300, 300) if @actor.image %>
  </div>
  <p><%= simple_format @actor.description %></p>

  <%= link_to 'Edit', edit_actor_path(@actor) %> |
  <%= link_to 'Back', actors_path %>
</div>

<%= render partial: "comments/comments", locals: {commentable: @actor} %>
<%= render partial: "comments/form", locals: {commentable: @actor} %>

      <ul>
      <% @film.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: 3 %>
  </div>
  <div class="form-group" id="image_attachment_upload">
    <%= f.label :image %>
    <%= f.attachment_field :image, direct: true %>
  </div>
  <div class="row">
    <div class="col-md-3">

      <div id="image"></div>

      <% if @film.image_id? %>
        <%= image_tag attachment_url(@film, :image, :fill, 100, 100), class: "img-rounded" %>

        <%= f.check_box :remove_image %>
        <%= f.label :remove_image %>
      <% end %>
    </div>
    <div id="image"></div>
  </div>

  <div class="actions mt-10">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
